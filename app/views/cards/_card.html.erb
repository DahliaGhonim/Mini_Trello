<div id="<%= dom_id card %>" class="group">

  <div class="flex items-start gap-3">
    <%= form_with model: card, url: toggle_done_board_list_card_path(card.list.board, card.list, card),
                  method: :patch, data: { turbo: true } do |f| %>
      <%= f.check_box :done,
            checked: card.done,
            class: "peer h-5 w-5 cursor-pointer rounded border-gray-300 text-stone-800
                    focus:ring-2 focus:ring-stone-800 focus:ring-offset-0
                    checked:bg-stone-800 checked:border-stone-800",
            onclick: "this.form.requestSubmit()" %>
    <% end %>

    <span class="text-sm text-stone-800 font-medium select-none">
      <%= card.title %>
    </span>
  </div>

</div>
