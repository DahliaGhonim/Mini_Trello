<%= turbo_frame_tag "new_board" do %>
  <div class="flex flex-col h-full">
    <div class="shrink-0 w-full bg-white rounded-xl shadow-md border border-gray-200 
                    hover:shadow-lg transition-shadow">
      
      <div class="p-8 flex flex-col justify-center h-40 min-h-40">
        <%= link_to new_board_path,
              class: "text-center font-semibold text-gray-700 text-xl hover:text-gray-900 
                      transition-colors" do %>
          <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" 
               viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 4v16m8-8H4" />
          </svg>
          Create new board
        <% end %>
      </div>
    </div>
  </div>
<% end %>
