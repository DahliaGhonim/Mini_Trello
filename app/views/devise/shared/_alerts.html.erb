<% if notice.present? %>
  <p class="mb-5 p-3 bg-green-100 border border-green-300 text-green-700 rounded-md text-sm font-medium">
    <%= notice %>
  </p>
<% elsif alert.present? %>
  <p class="mb-5 p-3 bg-red-100 border border-red-300 text-red-700 rounded-md text-sm font-medium">
    <%= alert %>
  </p>
<% end %>
